
<% if signed_in? %>
    <div class="row">
        <aside class="span4 ">
        	<section>
        	   <%= render 'shared/user_info' %>
        	</section>
        	<br />
        	<section>
        	   <%= render 'shared/micropost_form' %>
        	</section>
        </aside>
        <aside class="span8">
            <h3>Microposts Feed</h3>
            <%= render 'shared/feed' %> 
        </aside>
    </div>
<% else %>
    <h1>Home</h1>
    <div class="center hero-unit">
        <h2>Welcome to the Sample App</h2>

        <h3>
            This is the home page for the
            <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
            sample application.
        </h3>

          <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>
<% end %>
<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/', target: "_blank" %>