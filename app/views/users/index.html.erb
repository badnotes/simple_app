<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</table>

<%= will_paginate %>

<ul class="users">
<% @users.each do |user| %>
  <li>
    <span><%= link_to user.name, user %></span>
    <span><%= user.email %></span>
    <span><%= link_to 'Show', user %></span>
    <span><%= link_to 'Edit', edit_user_path(user) %></span>
    <span><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </li>
<% end %>
</ul>

<%= will_paginate %>
